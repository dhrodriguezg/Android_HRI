<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".DraggingActivity"
    android:orientation="horizontal">

    <org.ros.android.view.RosImageView
        android:id="@+id/imageViewCenter"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/loading" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/msgTextView"
        android:layout_above="@+id/emergencyButton"
        android:layout_alignParentTop="true"
        android:gravity="start"
        android:background="#ffffffff"
        android:alpha="0.0"
        android:textColor="#ff000000"
        android:layout_alignRight="@+id/emergencyButton"
        android:layout_alignParentLeft="true" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="STOPING ROBOT"
        android:textOff="EMERGENCY STOP"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/emergencyButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:checked="false"
        android:textStyle="bold"
        />
    <ToggleButton
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Select"
        android:textOn="Select: ON"
        android:textOff="Select:OFF"
        android:id="@+id/selectButton"
        android:checked="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <ToggleButton
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Move"
        android:textOn="Move: ON"
        android:textOff="Move:OFF"
        android:id="@+id/moveButton"
        android:layout_above="@+id/emergencyButton"
        android:layout_alignParentLeft="true"
        android:checked="false" />

    <ToggleButton
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Rotate"
        android:textOn="Rotate: ON"
        android:textOff="Rotate:OFF"
        android:id="@+id/rotateButton"
        android:layout_above="@+id/moveButton"
        android:layout_alignParentLeft="true"
        android:checked="false" />

    <ToggleButton
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Grasping"
        android:textOn="Grasp: ON"
        android:textOff="Grasp:OFF"
        android:id="@+id/graspButton"
        android:layout_above="@+id/rotateButton"
        android:layout_alignParentLeft="true"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Status: "
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/emergencyButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/statusView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView"
        android:layout_alignRight="@+id/emergencyButton"
        android:background="#ffff0000"
        android:text="No Hands!"
        android:gravity="center_vertical|center_horizontal" />


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/finger_index"
        android:id="@+id/leftIndexFinger"
        android:alpha="0"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/finger_middle"
        android:id="@+id/leftMiddleFinger"
        android:alpha="0"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/finger_ring"
        android:id="@+id/leftRingFinger"
        android:alpha="0"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/finger_pinky"
        android:id="@+id/leftPinkyFinger"
        android:alpha="0"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/finger_thumb"
        android:id="@+id/leftThumbFinger"
        android:alpha="0"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/hand_left"
        android:id="@+id/leftHand"
        android:alpha="0" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/finger_index"
        android:id="@+id/rightIndexFinger"
        android:alpha="0"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/finger_middle"
        android:id="@+id/rightMiddleFinger"
        android:alpha="0"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/finger_ring"
        android:id="@+id/rightRingFinger"
        android:alpha="0"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/finger_pinky"
        android:id="@+id/rightPinkyFinger"
        android:alpha="0"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/finger_thumb"
        android:id="@+id/rightThumbFinger"
        android:alpha="0"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/hand_right"
        android:id="@+id/rightHand"
        android:alpha="0" />


</RelativeLayout>
